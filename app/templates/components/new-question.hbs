{{#if addNewQuestion}}
<h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="photo">Photo</label>
        {{input value=photo id="photo"}}
      </div>

      <div class="form-group">
        <label for="content">Your Question</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="questionPersonName">Your Name</label>
        {{input value=questionPersonName id="questionPersonName"}}
      </div>

      <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
